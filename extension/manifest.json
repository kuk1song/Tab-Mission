{
  "name": "Tab Mission",
  "description": "A Mission Control-inspired overview for your Chrome tabs.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "windows",
    "activeTab",
    "scripting",
    "system.display"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open Tab Overview",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "open-overview": {
      "description": "Open tab overview",
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      }
    }
  }
}

